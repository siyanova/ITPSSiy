<Page x:Class="ITPSSiy.poisk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITPSSiy"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="poisk">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="300" Height="30" Background="White"  Margin="10" FontSize="15"/>
                <Button Content="Поиск" Margin="10" Height="40" Width="100" Background="#FF882A2A" Foreground="White"/>
                <Button Content="Добавить" Margin="10" Height="40" Width="100" Background="#FF882A2A" Foreground="White" Click="DobavitButtonClick"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
